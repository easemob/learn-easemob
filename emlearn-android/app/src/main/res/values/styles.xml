<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewBackground">
        <item name="android:background">@color/colorMainBg</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TvLoginTitle" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_gray_deep</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">10</item>
    </style>
    <style name="TvLoginVersion" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_gray_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextMarginLeft" parent="android:Widget.EditText">
        <item name="android:background">@color/colorMainBg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">16</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
    </style>
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/chat_tb_dialog_loading_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

　　
　　<style name="LiveDialogFragment.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_anim_exit</item>
    </style>

</resources>